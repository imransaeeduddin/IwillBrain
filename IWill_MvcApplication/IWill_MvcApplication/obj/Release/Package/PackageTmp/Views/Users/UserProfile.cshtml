            success: function (r) {
                if (r == "updated") {
                    $("#dvEditBackImgDragOptions").fadeOut();
                    $("#BackImgDragPostionText").fadeOut();
                    $("#imgBackUpload").css('opacity', '1');
                    $("#dvEditIcon").fadeIn();

