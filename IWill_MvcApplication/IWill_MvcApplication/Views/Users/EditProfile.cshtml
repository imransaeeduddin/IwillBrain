                        //alert($("#hdnFrontFileName").val());

                    }
                    else

                        if (data.indexOf("notsaved") == 0) {
                            $("#loadingPic").hide();
                            $("#dvRemovepic").show();
                            $("#fuImage").prop('disabled', true);
                            alert("picture is not saved")
                        }

                    if (data.IndexOf("exists"))
