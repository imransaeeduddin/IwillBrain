    function RevomePic() {
        $("#loadingPic").show();

        var file = $("#imgUploadThumbnail").attr("src").filename();
        var ext = getFileExtension($("#imgUploadThumbnail").attr("src"));
        FileName = file + "." + ext;
        $.ajax({
